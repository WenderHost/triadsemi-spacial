{% extends "base.twig" %}

{% block content %}
  <section id="content" role="main" class="content-wrapper container">
    {% if post.content is not empty %}
      {{ post.content }}
    {% endif %}
  {% if accordion %}
    <div id="accordion">
    {% for card in accordion %}
        <div class="card">
          <div class="card-header" id="heading{{ loop.index }}">
            <h5 class="mb-0"><a href="#collapse{{ loop.index }}" data-toggle="collapse" data-parent="#accordion">{{ card.title }}</a></h5>
          </div>
          <div id="collapse{{ loop.index }}" class="collapse{% if loop.first %} show{% endif %}" role="tabpanel">
            <div class="card-body">
              {{ card.content }}
            </div>
          </div>
        </div><!-- /.card -->
    {% endfor %}
    </div>
  {% endif %}
  </section>
{% endblock %}