{# This file demonstrates using most of the index.twig template and modifying
   just a small part. See `search.twig` for an example of another approach #}

{% extends "index.twig" %}

{% block content %}

  <div class="container userprojects header">

        <h1>
          Laser Tracking User Projects
        </h1>
        <p>
          Here we’ll be highlighting user applications of our Light to Digital Tracking IC for SteamVR™ Tracking.
        </p>


  </div>


  <div class="container userprojects">
    <div class="row">
      {% for post in posts %}
        {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
      {% endfor %}
    </div>
  </div>

  {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
{% endblock %}
