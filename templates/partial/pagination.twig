{% if posts.pagination.pages is not empty %}
  <nav class="blog-pager">
    <ul class="pagination justify-content-center">

      {% if pagination.prev %}
      <li class="page-item">
        <a class="page-link" href="{{ pagination.prev.link }}">&larr; Previous</a>
      </li>
      {% else %}
      <li class="page-item disabled">
        <a class="page-link" href="#">&larr; Previous</a>
      </li>
      {% endif %}

      {% for page in pagination.pages %}
        {% if page.link %}
          <li class="page-item">
            <a class="page-link {{ page.class }}" href="{{ page.link }}" >{{ page.title }}</a>
          </li>
        {% else %}
          <li class="page-item{% if '&hellip;' != page.title %} active{% else %} disabled{% endif %}">
            <span class="page-link {{ page.class }}">{{ page.title }}</span>
            <!--<a href="#" class="page-link {{ page.class }}">{{ page.title }}</a>-->
          </li>
        {% endif %}
      {% endfor %}

      {% if pagination.next %}
      <li class="page-item">
        <a class="page-link {{ page.class }}" href="{{ pagination.next.link }}">Next &rarr;</a>
      </li>
      {% else %}
      <li class="page-item disabled">
        <span class="page-link {{ page.class }}">Next &rarr;</span>
      </li>
      {% endif %}

    </ul>
  </nav>
{% endif %}